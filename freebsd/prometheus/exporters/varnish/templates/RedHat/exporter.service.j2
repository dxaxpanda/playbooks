[Unit]
Description={{exporter_file}} exporter for machine metrics
Documentation=https://github.com/{{author}}/{{exporter_file}}

[Service]
Restart=always
User=prometheus
EnvironmentFile=/etc/default/{{exporter_file}}
ExecStart=/usr/bin/{{exporter_file}} $ARGS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
